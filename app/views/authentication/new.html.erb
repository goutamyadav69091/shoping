<h1>Login Page</h1>

<%= form_with url: "/auth/login", method: :post, local: true do |form| %>
  <div>
    <%= form.label :email %><br>
    <%= form.text_field :email %>
  </div>

	<div>
    <%= form.label :password %><br>
    <%= form.text_field :password %>
  </div>

	<div>
    <%= form.submit %>
  </div>
<% end %>